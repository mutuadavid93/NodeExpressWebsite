<!-- Use same partial for different pages using conditions -->

<article class="speakerslist <% if(pageID == 'home') { %> jumbotron hidden-xs <% } %>">
  <div class="container">
    <div class="row">
        <!-- Loop through the speakers -->
        <% speakers.forEach(function(item) { %>
        
        <div class="<% if(pageID == 'home') { %> col-sm-4 text-center <% } else { %> col-sm-8 <% } %>">
          <h3 class="speakerslist-title"><%= item.title %></h3>
          <h5 class="speakerslist-name">with <a href="/speakers/<%= item.shortname %>"><%= item.name %></a></h5>
          <p class="speakerslist-info">
            <a href="/speakers/<%= item.shortname %>">
                
                <% if(pageID == 'home') { %>
                    <img class="speakerslist-img img-circle" src="/images/speakers/<%= item.shortname %>_tn.jpg" alt="Photo of name">
                <% } %>
                
                <% if(pageID == 'speakerList') { %>
                    <img class="speakerslist-img img-circle pull-left" src="/images/speakers/<%= item.shortname %>_tn.jpg" alt="Photo of name">
                <% } %>
            
                <% if(pageID == 'speakerDetail') { %>
                <img class="speakerslist-img img-responsive pull-left" style="text-align: center; margin: 0px 20px;" 
                         src="/images/subject/<%= item.shortname %>.jpg" alt="Photo of name">
                <% } %>
            </a>
              
            <% if(pageID !== 'home') { %>  
                <% if(pageID == 'speakerList') { %>
                    <%= item.summary %> 
                <% } else { %> 
                    <%- item.description %> 
                <% } %>
            <% } %>
          </p>
        </div><!-- col-sm-8 -->

        <% }); %>
        
    </div><!-- row -->
  </div><!-- container -->
</article>
